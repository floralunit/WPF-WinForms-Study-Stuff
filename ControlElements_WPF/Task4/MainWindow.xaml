<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Calendar 
            x:Name="calendar1"
            FirstDayOfWeek="Monday"
            SelectionMode="MultipleRange"
            xmlns:sys="clr-namespace:System.Security.Claims;assembly=mscorlib">
        </Calendar>
        <Label Content="Время в Москве: "></Label>
        <Label Content="{Binding CurrentTime}"/>
        <Label Content="Время во Владивостоке: "></Label>
        <Label Content="{Binding VladivostokTime}"></Label>
    </StackPanel>
</Window>
